// Highlight menu aktif saat scroll
const sections = document.querySelectorAll('section');
const navLinks = document.querySelectorAll('.nav-links a');

window.addEventListener('scroll', () => {
  let current = '';
  sections.forEach(section => {
    const sectionTop = section.offsetTop - 150;
    if (pageYOffset >= sectionTop) current = section.getAttribute('id');
  });

  navLinks.forEach(link => {
    link.classList.remove('active');
    if (link.getAttribute('href').includes(current)) link.classList.add('active');
  });
});
// Animasi video saat muncul di layar
const videoSection = document.querySelector('.video-section');

function showVideoOnScroll() {
  const triggerBottom = window.innerHeight * 0.8;
  const videoTop = videoSection.getBoundingClientRect().top;

  if (videoTop < triggerBottom) {
    videoSection.classList.add('show');
  }
}

window.addEventListener('scroll', showVideoOnScroll);
window.addEventListener('load', showVideoOnScroll);
// ===== SMOOTH SCROLL =====
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener("click", function (e) {
    e.preventDefault();
    const target = document.querySelector(this.getAttribute("href"));
    target.scrollIntoView({ behavior: "smooth" });
  });
});

// ===== DARK MODE =====
const toggle = document.getElementById("darkModeToggle");
const body = document.body;

// Simpan preferensi user
if (localStorage.getItem("theme") === "dark") {
  body.classList.add("dark-mode");
  toggle.textContent = "â˜€ï¸";
}

toggle.addEventListener("click", () => {
  body.classList.toggle("dark-mode");

  if (body.classList.contains("dark-mode")) {
    toggle.textContent = "â˜€ï¸";
    localStorage.setItem("theme", "dark");
  } else {
    toggle.textContent = "ğŸŒ™";
    localStorage.setItem("theme", "light");
  }
});
